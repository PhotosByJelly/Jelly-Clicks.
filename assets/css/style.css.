/* assets/css/style.css */

/* --- CSS Variables for Easy Customization --- */
:root {
    --color-primary-bg: #fcf8f5; /* Very soft cream/off-white */
    --color-secondary-bg: #ece6e1; /* Slightly darker cream for contrast */
    --color-text-dark: #3a3a3a; /* Deep, soft charcoal */
    --color-text-light: #f5f5f5; /* Light text for dark backgrounds */
    --color-accent: #b8869a; /* Muted rose/dusty pink - your existing color, but softer */
    --color-hover: #9e6f80; /* Darker accent for hover states */
    --color-shadow: rgba(0, 0, 0, 0.08); /* Gentle shadow */
    --font-heading: 'Cormorant Garamond', serif; /* Elegant, classic serif */
    --font-body: 'Montserrat', sans-serif; /* Clean, modern sans-serif */
    --transition-duration: 0.6s; /* Base duration for smooth transitions */
    --ease-out-cubic: cubic-bezier(0.215, 0.61, 0.355, 1); /* Custom easing for fluidity */
    --border-radius: 10px;
}

/* --- Global Resets & Base Styles --- */
*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-body);
    color: var(--color-text-dark);
    line-height: 1.7;
    background-color: var(--color-primary-bg);
    overflow-x: hidden; /* Prevent horizontal scroll from animations */
    -webkit-font-smoothing: antialiased; /* Better font rendering */
    -moz-osx-font-smoothing: grayscale;
    opacity: 0; /* Initial hidden state for page load animation */
    animation: fadeInPage 1.5s var(--ease-out-cubic) forwards;
}

a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-duration) var(--ease-out-cubic);
}

a:hover {
    color: var(--color-hover);
}

img {
    max-width: 100%;
    height: auto;
    display: block; /* Removes extra space below images */
}

/* --- Typography --- */
h1, h2, h3 {
    font-family: var(--font-heading);
    color: var(--color-text-dark);
    margin-bottom: 0.8em;
}

h1 { font-size: 3.8em; font-weight: 700; line-height: 1.2; }
h2 { font-size: 2.8em; font-weight: 500; }
h3 { font-size: 1.6em; font-weight: 500; }

p { font-size: 1em; }

/* --- Header --- */
