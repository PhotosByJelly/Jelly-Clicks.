    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5em;
    padding: 2em 0;
    justify-content: center;
    align-items: flex-start; /* Aligns items to the top if heights vary */
}

/* --- Photo Card --- */
.photo-card {
    background: #fff;
    border-radius: var(--border-radius);
    box-shadow: 0 6px 25px var(--color-shadow);
    overflow: hidden;
    position: relative;
    cursor: pointer;
    transition: transform var(--transition-duration) var(--ease-out-cubic),
                box-shadow var(--transition-duration) var(--ease-out-cubic);
    opacity: 0; /* Hidden by default for scroll-reveal */
    transform: translateY(30px); /* Initial state for scroll-reveal */
}

.photo-card.is-revealed {
    opacity: 1;
    transform: translateY(0);
}

.photo-card img {
    width: 100%;
    height: 320px; /* Fixed height for consistent look */
    object-fit: cover; /* Ensures images cover the area */
    display: block;
    transition: transform var(--transition-duration) var(--ease-out-cubic);
}

.photo-card:hover {
    transform: translateY(-10px) scale(1.02); /* Subtle lift and zoom */
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.photo-card:hover img {
    transform: scale(1.05); /* Gentle image zoom */
}

.card-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1.5em 1em;
    background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0)); /* Gradient overlay */
    color: var(--color-text-light);
    transform: translateY(100%); /* Start off-screen */
    opacity: 0; /* Hidden by default */
    transition: transform var(--transition-duration) var(--ease-out-cubic),
                opacity var(--transition-duration) var(--ease-out-cubic);
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.photo-card:hover .card-overlay {
    transform: translateY(0); /* Slide up on hover */
    opacity: 1; /* Fade in on hover */
}

.card-overlay h3 {
    color: var(--color-text-light);
    margin: 0;
    font-size: 1.3em;
}

