/* --- Photo Modal --- */
.photo-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent dark background */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    visibility: hidden; /* Hidden by default */
    opacity: 0;
    transition: opacity var(--transition-duration) var(--ease-out-cubic), visibility var(--transition-duration) var(--ease-out-cubic);
}

.photo-modal.active {
    visibility: visible;
    opacity: 1;
}

.modal-content {
    background: #fff;
    border-radius: var(--border-radius);
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
    max-width: 90%;
    max-height: 90%;
    display: flex;
    flex-direction: column; /* Stack image and details on small screens */
    overflow: hidden; /* Important for border-radius */
    position: relative;
    transform: scale(0.8) translateY(20px); /* Initial state for entry animation */
    opacity: 0;
    transition: transform var(--transition-duration) var(--ease-out-cubic),
                opacity var(--transition-duration) var(--ease-out-cubic);
}

.photo-modal.active .modal-content {
    transform: scale(1) translateY(0); /* Animate to full size */
    opacity: 1;
}

.close-btn {
    position: absolute;
    top: 15px;
