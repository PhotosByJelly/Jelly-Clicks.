    animation: slideInFromTop 1.2s var(--ease-out-cubic) forwards;
    opacity: 0;
}

.site-tagline {
    font-size: 1.15em;
    color: #777;
    margin-top: 0.5em;
    animation: fadeIn 1.2s var(--ease-out-cubic) 0.5s forwards;
    opacity: 0;
}

/* --- Gallery Container & Grid --- */
.gallery-container {
    padding: 3em 2em;
    max-width: 1400px;
    margin: 0 auto;
}

.photo-grid {
